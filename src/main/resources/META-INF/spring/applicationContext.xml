<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:axon="http://www.axonframework.org/schema/core"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:repository="http://www.springframework.org/schema/data/repository"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
		http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-2.2.xsd
		http://www.springframework.org/schema/data/repository http://www.springframework.org/schema/data/repository/spring-repository-1.5.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:property-placeholder location="classpath*:META-INF/spring/*.properties" />

	<context:spring-configured />

	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

	<jpa:repositories base-package="com.bleulace"
		repository-impl-postfix="Impl">
		<repository:include-filter type="assignable"
			expression="com.bleulace.utils.jpa.ReadOnlyDAO" />
	</jpa:repositories>

	<context:component-scan base-package="com.bleulace">
		<context:exclude-filter expression=".*_Roo_.*"
			type="regex" />
	</context:component-scan>

	<task:executor id="executor" pool-size="0-4" />

	<!-- Axon -->
	<axon:annotation-config />

	<bean id="axonTxManager" class="org.axonframework.unitofwork.SpringTransactionManager">
		<constructor-arg ref="transactionManager" />
	</bean>

	<bean id="unitOfWorkFactory" class="org.axonframework.unitofwork.DefaultUnitOfWorkFactory">
		<constructor-arg ref="axonTxManager" />
	</bean>

	<bean
		class="org.axonframework.commandhandling.gateway.CommandGatewayFactoryBean"
		id="commandGateway">
		<property name="commandBus" ref="commandBus" />
	</bean>

	<axon:jpa-event-store id="eventStore" data-source="dataSource" />

	<axon:jpa-saga-repository id="sagaRepository"
		entity-manager-provider="entityManagerProvider" resource-injector="nullResourceInjector" />

	<axon:saga-manager id="sagaManager" event-bus="eventBus"
		suppress-exceptions="false">
		<axon:async executor="executor" transaction-manager="transactionManager"
			processor-count="4" />
		<axon:types>
		<!-- com.bleulace.crm.domain.FriendRequestSaga
			com.bleulace.mgt.domain.EventInvitationSaga  -->
		</axon:types>
	</axon:saga-manager>

	<bean id="entityManagerProvider"
		class="org.axonframework.common.jpa.ContainerManagedEntityManagerProvider" />

	<int:channel id="eventBusChannel">
		<int:dispatcher task-executor="executor" />
	</int:channel>


	<axon:aggregate-command-handler
		command-bus="commandBus" aggregate-type="com.bleulace.domain.crm.model.Account"
		repository="resourceRepository" />
	<axon:aggregate-command-handler
		command-bus="commandBus" aggregate-type="com.bleulace.domain.crm.model.AccountGroup"
		repository="resourceRepository" />

	<axon:aggregate-command-handler
		command-bus="commandBus" aggregate-type="com.bleulace.domain.management.model.Project"
		repository="resourceRepository" />
	<axon:aggregate-command-handler
		command-bus="commandBus" aggregate-type="com.bleulace.domain.management.model.Event"
		repository="resourceRepository" />

	<bean id="abstractCommandBus" abstract="true">
		<property name="transactionManager" ref="axonTxManager" />
		<property name="handlerInterceptors">
			<util:list>
				<bean class="org.axonframework.auditing.AuditingInterceptor">
					<property name="auditDataProvider" ref="auditDataProviderImpl" />
					<property name="auditLogger" ref="auditLoggerImpl" />
				</bean>
			</util:list>
		</property>
		<property name="dispatchInterceptors">
			<util:list>
				<bean
					class="org.axonframework.commandhandling.interceptors.BeanValidationInterceptor">
					<constructor-arg ref="validator" />
				</bean>
				<bean class="com.bleulace.cqrs.command.AuthorizationInterceptor" />
				<bean class="com.bleulace.cqrs.command.CommandMetaDataInterceptor" />
			</util:list>
		</property>
	</bean>

	<beans profile="dev,prod">
		<bean id="eventBus"
			class="org.axonframework.integration.eventbus.SpringIntegrationEventBus">
			<property name="channel" ref="eventBusChannel" />
		</bean>
		<bean id="commandBus"
			class="org.axonframework.commandhandling.AsynchronousCommandBus"
			parent="abstractCommandBus">
			<constructor-arg ref="executor" />
		</bean>
	</beans>

	<beans profile="test">
		<bean id="commandBus" class="org.axonframework.commandhandling.SimpleCommandBus"
			parent="abstractCommandBus" />
		<axon:event-bus id="eventBus" />
	</beans>
</beans>